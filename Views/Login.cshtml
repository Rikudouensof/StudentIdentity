<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Haunt Signup Form Responsive, Signup form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <link href="~/Content/LoginScripts/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Content/LoginScripts/css/style.css" rel="stylesheet" type="text/css" media="all" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" media="all" />*@
    <link href="//fonts.googleapis.com/css?family=Raleway:400,500,600,700,800,900" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:400,600,700" rel="stylesheet">
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken();
            <h2>SIGN IN</h2>

            @Html.ValidationSummary()
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "agileinfo" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "agileinfo" })
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe, new { @class = "agile_par", style = "color:White" })
            @*@Html.DropDownList("CreateUsersRoles", new SelectList(Model.CreateUsersRoles, "ZeActualRole", "RoleName"),"Join as",  new { @class = "form-control" })*@

            <div class="agile_par">
                <p>You have agreed to our <a href="#">Terms of Service</a> and <a href="#">Private Policy</a></p>
            </div>
            <div class="w3l_but">
                <button type="submit">Log in</button>
            </div>
        }
        <div class="wthree_down">
            <h3>Do not have an account yet?  @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "agile_par" })</h3>

        </div>

        <div class="clear"></div>
    </div>
    @*<div class="footer">
            <p>&copy; Haunt Signup Form  2018. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="blank">W3layouts</a></p>
        </div>*@

</body>
</html>